<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.hamemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:name=".db.TaskListProvider"
            android:authorities="com.example.provider.TaskList" />

        <activity
            android:name=".activity.TaskListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.TaskDetailActivity">
            <intent-filter>
                <action android:name="android.intent.action.NEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AlarmActivity">
            <intent-filter>
                <action android:name=""/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>


        <receiver android:name=".receiver.TaskReceiver">
            <intent-filter>
                <action android:name="com." />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

    </application>

    <uses-sdk android:minSdkVersion="3"/>
    <uses-permission android:name="android.permission.VIBRATE"/>


</manifest>